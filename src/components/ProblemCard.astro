---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="group bg-white rounded-lg p-6 shadow-[0_2px_10px_rgba(0,0,0,0.05)] border-l-4 border-red-500 transition-all duration-300 hover:shadow-[0_4px_15px_rgba(0,0,0,0.1)] hover:translate-y-[-3px]">
  <div class="flex items-center mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="text-red-500 mr-2 h-6 w-6 transition-all duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <h3 class="text-xl font-bold text-gray-800">{title}</h3>
  </div>
  <p class="text-gray-700">
    <slot />
  </p>
</div>
