---
// Astroコンポーネントのフロントマター
import Icon from './ui/Icon.astro';
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 w-full transition-all duration-300 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="flex h-16 items-center justify-between">
      <!-- ロゴ -->
      <a href="/" class="relative z-50 flex items-center space-x-2 hover-lift">
        <Icon name="Mountain" class="h-6 w-6 lg:h-8 lg:w-8 text-primary animate-float" />
        <span class="text-lg lg:text-xl font-bold gradient-text">Kumono</span>
      </a>

      <!-- デスクトップナビゲーション -->
      <nav class="hidden lg:flex lg:items-center lg:space-x-8">
        <a href="/about" class="nav-link text-lg font-medium text-gray-800 hover:text-primary transition-all duration-300 relative group">
          企業情報
          <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-primary transform -translate-x-1/2 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/service" class="nav-link text-lg font-medium text-gray-800 hover:text-primary transition-all duration-300 relative group">
          事業内容
          <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-primary transform -translate-x-1/2 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/cases" class="nav-link text-lg font-medium text-gray-800 hover:text-primary transition-all duration-300 relative group">
          実績紹介
          <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-primary transform -translate-x-1/2 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a href="/blog" class="nav-link text-lg font-medium text-gray-800 hover:text-primary transition-all duration-300 relative group">
          ブログ
          <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-primary transform -translate-x-1/2 transition-all duration-300 group-hover:w-full"></span>
        </a>
        <a
          href="/contact"
          class="
            inline-flex items-center px-5 py-2 rounded-full
            bg-primary text-white hover:bg-primary/90
            transition-all duration-300 hover:translate-y-[-2px]
            shadow-[0_2px_6px_rgba(37,162,68,0.2)] hover:shadow-[0_4px_12px_rgba(37,162,68,0.3)]
          "
        >
          お問い合わせ
        </a>
      </nav>

      <!-- ハンバーガーメニュー -->
      <button 
        id="menu-toggle"
        class="relative z-50 lg:hidden focus:outline-none" 
        aria-label="Toggle Menu"
        aria-expanded="false"
      >
        <div class="relative w-6 h-6">
          <span class="absolute h-0.5 w-full bg-foreground transform transition-all duration-300 rotate-0 top-1"></span>
          <span class="absolute h-0.5 w-full bg-foreground transform transition-all duration-300 opacity-100 top-3"></span>
          <span class="absolute h-0.5 w-full bg-foreground transform transition-all duration-300 rotate-0 top-5"></span>
        </div>
      </button>
    </div>

    <!-- モバイルナビゲーション -->
    <div 
      id="mobile-menu"
      class="
        fixed top-0 right-0 bottom-0 w-[60%] max-w-sm 
        bg-white/100 dark:bg-gray-900/100
        transition-all duration-300 ease-in-out transform
        min-h-screen pt-16 shadow-2xl
        lg:hidden overflow-y-auto z-50
        opacity-0 translate-x-full pointer-events-none
      "
    >
      <!-- バツボタン -->
      <button
        id="close-menu"
        class="absolute top-4 right-4 p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full transition-smooth"
        aria-label="Close Menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
      <nav class="container h-full mx-auto px-4 py-6">
        <div class="flex flex-col space-y-6">
          <a
            href="/about"
            class="mobile-nav-link px-4 py-3 rounded-lg text-gray-800 font-medium text-lg transition-all duration-300 hover:bg-primary/10 hover:text-primary hover:pl-6"
          >
            企業情報
          </a>
          <a
            href="/service"
            class="mobile-nav-link px-4 py-3 rounded-lg text-gray-800 font-medium text-lg transition-all duration-300 hover:bg-primary/10 hover:text-primary hover:pl-6"
          >
            事業内容
          </a>
          <a
            href="/cases"
            class="mobile-nav-link px-4 py-3 rounded-lg text-gray-800 font-medium text-lg transition-all duration-300 hover:bg-primary/10 hover:text-primary hover:pl-6"
          >
            実績紹介
          </a>
          <a
            href="/blog"
            class="mobile-nav-link px-4 py-3 rounded-lg text-gray-800 font-medium text-lg transition-all duration-300 hover:bg-primary/10 hover:text-primary hover:pl-6"
          >
            ブログ
          </a>
          <a
            href="/contact"
            class="
              mt-4 px-4 py-3 bg-primary text-white rounded-full
              hover:bg-primary/90 transition-all duration-300 text-center text-lg
              shadow-[0_2px_6px_rgba(37,162,68,0.2)] hover:shadow-[0_4px_12px_rgba(37,162,68,0.3)]
              hover:translate-y-[-2px]  
            "
          >
            お問い合わせ
          </a>
        </div>
      </nav>
    </div>

    <!-- オーバーレイ背景 -->
    <div
      id="menu-overlay"
      class="
        fixed inset-0 bg-black/50
        transition-opacity duration-300
        lg:hidden z-40
        opacity-0 pointer-events-none
      "
      aria-hidden="true"
    ></div>
  </div>
</header>

<script>
  // クライアントサイドのJavaScriptコード
  function setupHeader() {
    const header = document.getElementById('header');
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenu = document.getElementById('close-menu');
    const menuOverlay = document.getElementById('menu-overlay');
    
    // アクティブページのスタイル設定
    function setActiveNavLink() {
      const currentPath = window.location.pathname;
      
      // デスクトップナビゲーションのアクティブ状態設定
      const desktopNavLinks = document.querySelectorAll('.nav-link');
      desktopNavLinks.forEach(link => {
        const href = link.getAttribute('href');
        // ホームページの場合は特別処理
        if (href === '/' && currentPath === '/') {
          link.classList.add('text-primary');
          link.querySelector('span').classList.add('w-full');
        }
        // その他のページの場合は前方一致で判定
        else if (href !== '/' && currentPath.startsWith(href)) {
          link.classList.add('text-primary');
          link.querySelector('span').classList.add('w-full');
        } else {
          link.classList.remove('text-primary');
          link.querySelector('span').classList.remove('w-full');
        }
      });
      
      // モバイルナビゲーションのアクティブ状態設定
      const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
      mobileNavLinks.forEach(link => {
        const href = link.getAttribute('href');
        if ((href === '/' && currentPath === '/') || 
            (href !== '/' && currentPath.startsWith(href))) {
          link.classList.add('text-primary', 'bg-primary/10', 'pl-6');
        } else {
          link.classList.remove('text-primary', 'bg-primary/10', 'pl-6');
        }
      });
    }
    
    // スクロール時のヘッダースタイル変更
    function handleScroll() {
      if (window.scrollY > 20) {
        header.classList.add('bg-white/80', 'backdrop-blur-md', 'shadow-sm', 'dark:bg-gray-900/80');
      } else {
        header.classList.remove('bg-white/80', 'backdrop-blur-md', 'shadow-sm', 'dark:bg-gray-900/80');
      }
    }
    
    // メニュー開閉関数
    function toggleMenu() {
      const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';
      
      if (isOpen) {
        // メニューを閉じる
        menuToggle.setAttribute('aria-expanded', 'false');
        mobileMenu.classList.add('opacity-0', 'translate-x-full', 'pointer-events-none');
        menuOverlay.classList.add('opacity-0', 'pointer-events-none');
        document.body.style.overflow = 'unset';
        
        // ハンバーガーアイコンを元に戻す
        menuToggle.querySelector('span:nth-child(1)').classList.remove('rotate-45', 'top-3');
        menuToggle.querySelector('span:nth-child(1)').classList.add('rotate-0', 'top-1');
        menuToggle.querySelector('span:nth-child(2)').classList.remove('opacity-0');
        menuToggle.querySelector('span:nth-child(2)').classList.add('opacity-100');
        menuToggle.querySelector('span:nth-child(3)').classList.remove('-rotate-45', 'top-3');
        menuToggle.querySelector('span:nth-child(3)').classList.add('rotate-0', 'top-5');
      } else {
        // メニューを開く
        menuToggle.setAttribute('aria-expanded', 'true');
        mobileMenu.classList.remove('opacity-0', 'translate-x-full', 'pointer-events-none');
        menuOverlay.classList.remove('opacity-0', 'pointer-events-none');
        document.body.style.overflow = 'hidden';
        
        // ハンバーガーアイコンをXに変更
        menuToggle.querySelector('span:nth-child(1)').classList.remove('rotate-0', 'top-1');
        menuToggle.querySelector('span:nth-child(1)').classList.add('rotate-45', 'top-3');
        menuToggle.querySelector('span:nth-child(2)').classList.remove('opacity-100');
        menuToggle.querySelector('span:nth-child(2)').classList.add('opacity-0');
        menuToggle.querySelector('span:nth-child(3)').classList.remove('rotate-0', 'top-5');
        menuToggle.querySelector('span:nth-child(3)').classList.add('-rotate-45', 'top-3');
      }
    }
    
    // イベントリスナーの設定
    window.addEventListener('scroll', handleScroll);
    menuToggle.addEventListener('click', toggleMenu);
    closeMenu.addEventListener('click', toggleMenu);
    menuOverlay.addEventListener('click', toggleMenu);
    
    // 初期化時にスクロール状態とアクティブページを確認
    handleScroll();
    setActiveNavLink();
    
    // ページ遷移時にメニューを閉じてアクティブページを更新
    document.addEventListener('astro:page-load', () => {
      if (menuToggle.getAttribute('aria-expanded') === 'true') {
        toggleMenu();
      }
      setActiveNavLink();
    });
    
    // クリーンアップ
    return () => {
      window.removeEventListener('scroll', handleScroll);
      menuToggle.removeEventListener('click', toggleMenu);
      closeMenu.removeEventListener('click', toggleMenu);
      menuOverlay.removeEventListener('click', toggleMenu);
    };
  }
  
  // DOMが読み込まれたらヘッダーのセットアップを実行
  document.addEventListener('DOMContentLoaded', setupHeader);
  document.addEventListener('astro:page-load', setupHeader);
</script>
