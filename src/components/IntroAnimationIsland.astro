---
import IntroAnimation from './IntroAnimation';

interface Props {
  onAnimationComplete?: () => void;
}

const { onAnimationComplete } = Astro.props;
---

<div class="intro-animation-wrapper">
  <IntroAnimation client:only="react" onAnimationComplete={onAnimationComplete} />
</div>

<style>
  .intro-animation-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
</style>
