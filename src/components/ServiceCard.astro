---
import Icon from './ui/Icon.astro';

interface Props {
  title: string;
  description: string;
  iconName: string;
  href: string;
}

const { title, description, iconName, href } = Astro.props;
---

<div class="group relative">
  <div class="absolute inset-0 bg-white rounded-lg transition-all duration-300 group-hover:scale-[0.98]"></div>
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent rounded-lg opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
  <div class="relative p-8 bg-white rounded-lg shadow-[0_2px_10px_rgba(0,0,0,0.05)] transition-all duration-300 hover:shadow-[0_4px_15px_rgba(0,0,0,0.1)] hover:translate-y-[-3px]">
    <div class="bg-primary/10 rounded-xl w-14 h-14 flex items-center justify-center mb-6 transition-all duration-300 group-hover:scale-110 group-hover:bg-primary/15">
      <Icon name={iconName} class="h-7 w-7 text-primary" />
    </div>
    <h3 class="text-xl font-bold mb-4 text-gray-900">{title}</h3>
    <p class="text-gray-700 leading-relaxed">{description}</p>
    <a 
      href={href}
      class="inline-flex items-center mt-6 text-primary font-medium hover:text-primary/80 transition-colors"
    >
      詳しく見る
      <Icon name="ArrowRight" class="ml-2 h-4 w-4 transform transition-transform group-hover:translate-x-1" />
    </a>
  </div>
</div>
